<!-- res/drawable/friend_item_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Add a solid color for the background -->
    <solid android:color="@color/friendItemBackground"/>

    <!-- Add corner radius to give rounded corners -->
    <corners android:radius="8dp" />

    <!-- Add some padding to create a subtle shadow effect -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
